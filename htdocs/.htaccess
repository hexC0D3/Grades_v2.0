<IfModule mod_rewrite.c>
	RewriteEngine On
	RewriteBase /
	
	RewriteCond %{REQUEST_FILENAME} !-f
	
	
	RewriteRule ^([[a-zA-Z0-9\-=&_@\.]+)$ index.php?type=$1
	RewriteRule ^([a-zA-Z0-9\-=&_@\.]+)/$ index.php?type=$1
	
	RewriteRule ^([a-zA-Z0-9\-=&_@\.]+)/([a-zA-Z0-9\-=&_@\.]+)$ index.php?type=$1&id=$2
	RewriteRule ^([a-zA-Z0-9\-=&_@\.]+)/([a-zA-Z0-9\-=&_@\.]+)/$ index.php?type=$1&id=$2
	
	RewriteRule ^([a-zA-Z0-9\-=&_@\.]+)/([a-zA-Z0-9\-=&_@\.]+)/([a-zA-Z0-9\-=&_@\.]+)$ index.php?type=$1&id=$2&action=$3
	RewriteRule ^([a-zA-Z0-9\-=&_@\.]+)/([a-zA-Z0-9\-=&_@\.]+)/([a-zA-Z0-9\-=&_@\.]+)/$ index.php?type=$1&id=$2&action=$3
	
</IfModule>